<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:ChalkeeDesktop.ViewModel"
                    xmlns:view="clr-namespace:ChalkeeDesktop.View">

    <DataTemplate DataType="{x:Type vm:DashboardVM}">
        <view:Dashboard />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:TimetableVM}">
        <view:Timetable />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:InfoVM}">
        <view:Info />
    </DataTemplate>    
    
    <DataTemplate DataType="{x:Type vm:SignInVM}">
        <view:SignIn />
    </DataTemplate>
    
</ResourceDictionary>